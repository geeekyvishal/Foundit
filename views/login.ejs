<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--=============== FAVICON ===============-->
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />

    <!--=============== BOXICONS ===============-->
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <!--=============== SWIPER CSS ===============-->
    <link rel="stylesheet" href="/css/swiper-bundle.min.css" />

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="/css/styles.css" />

    <title>Foundit - Login</title>
</head>

<body>
    <!--==================== HEADER ====================-->
    <header class="header" id="header">
        <nav class="nav container">
            <a href="#" class="nav__logo">
                FoundIt <i class="bx bxs-home-alt-2"></i>
            </a>
        
            <div class="nav__right">
                <!-- Theme change button -->
                <i class="bx bx-moon change-theme login-nav" id="theme-button"></i>
        
                <!-- GitHub Link -->
                <a href="https://github.com/geeekyvishal/Foundit" target="_blank" class="nav__link">
                    GitHub
                </a>
                <a href="https://github.com/geeekyvishal/Foundit" target="_blank" class="footer__social-link">
                    <i class="bx bxl-github"></i>
                </a>
            </div>
        </nav>
    </header>

    <!--==================== MAIN CONTENT ====================-->
    <section class="signin" style="margin-top: 10%;"></section>

    <div class="contact__card-box" style="margin-top: 20%; display: flex; align-items: center; justify-content: center;">
        <div>
            <!-- Google Sign-In Button -->
            <div class="google-btn">
                <div class="google-icon-wrapper">
                    <img class="google-icon" src="https://static-00.iconduck.com/assets.00/google-icon-2048x2048-pks9lbdv.png" alt="Google Icon">
                </div>
                <a href="/auth/google" style="text-decoration: none; color: black;">Sign in with Google</a>
            </div>
        </div>


        <br>
        <div style="padding: 5%;">
            <!-- Home Page Button -->
            <button type="button" class="google-btn">
                <a href="/index" class="btn-text" style="text-decoration: none; color: rgb(0, 0, 0);">Home Page</a>
            </button>
        </div>

        <br>
        
        <!-- Display error message if present -->
        <% if (typeof message !== 'undefined') { %>
            <p style="color:red; text-align: center; margin-top: 10px;"><%= message %></p>
        <% } %>
    </div>

    <!--=============== SCROLLREVEAL ===============-->
    <script src="/js/scrollreveal.min.js"></script>

    <!--=============== SWIPER JS ===============-->
    <script src="/js/swiper-bundle.min.js"></script>

    <!--=============== MAIN JS ===============-->
    <script src="/js/main.js"></script>
    <!--=============== SELECT JS ===============-->
    <script src="/js/select_tag.js"></script>
    <script src="/js/drop.js"></script>
</body>
</html>

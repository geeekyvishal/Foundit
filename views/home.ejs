<h1>Welcome <%= user.name %></h1>
<p>Email: <%= user.email %></p>

<div>
    <h2>Lost Items</h2>
    <div id="lost-container">
        <% lostItems.forEach(lostItem => { %>
            <div>
                <img src="<%= lostItem.item.photo %>" alt="lost item" width="100" height="100">
                <p><%= lostItem.item.description %></p>
                <p>Added by: <%= lostItem.user.name %> on <%= lostItem.item.date.toDateString() %></p>
            </div>
        <% }); %>
    </div>
</div>

<div>
    <h2>Found Items</h2>
    <div id="found-container">
        <% foundItems.forEach(foundItem => { %>
            <div>
                <img src="<%= foundItem.item.photo %>" alt="found item" width="100" height="100">
                <p><%= foundItem.item.description %></p>
                <p>Added by: <%= foundItem.user.name %> on <%= foundItem.item.date.toDateString() %></p>
            </div>
        <% }); %>
    </div>
</div>

<a href="/auth/logout">Logout</a>
<a href="/add-item">Add Item</a>
